{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "noEmitOnError": true,
        "strict": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "typeRoots": ["node_modules/@types"],
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}
