// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameType {
  LADDER
  CUSTOM
}

model User {
  // TODO: change by uuid?
  id            Int       @default(autoincrement()) @id
  nickname      String    @unique
  ladderPoints  Int       @default(0)
  avatar        Bytes? 
  twofa         Boolean   @default(false)
  OAuth         Boolean   @default(false)
  hash          String
  gamesWin      Game[]    @relation("winner")
  gamesLoose    Game[]    @relation("looser")
  messages      Message[] @relation("author")
  chatrooms     ChatRoomUser[]

  createdAt     DateTime  @default(now())
  @@map("users")
}

model Game {
  // TODO: change by uuid?
  id                    Int       @id @default(autoincrement())
  type                  GameType
  winnerId              Int
  winner                User      @relation("winner", fields: [winnerId], references: [id])
  looserId              Int
  looser                User      @relation("looser", fields: [looserId], references: [id])
  previousWinnerRating  Int
  previousLooserRating  Int
  winnerScore           Int       @default(0)
  looserScore           Int       @default(0)
  duration              DateTime 
  createdAt             DateTime  @default(now())
  @@map("games")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  author    User     @relation("author", fields: [authorId], references: [id], onDelete: Cascade)
  chatRoomId Int
  chatRoom  ChatRoom @relation("chatRoom", fields: [chatRoomId], references: [id])
  createdAt DateTime @default(now())
  @@map("messages")
}

model ChatRoomUser {
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  chatRoom    ChatRoom  @relation(fields: [chatRoomId], references: [id])
  chatRoomId  Int

  createdAt DateTime    @default(now())
  @@id([userId, chatRoomId])
  @@map("chatrooms_users")
}

model ChatRoom {
  id        Int         @id @default(autoincrement())
  name      String      @db.VarChar(255)
  messages  Message[]   @relation("chatRoom")
  users     ChatRoomUser[]
  createdAt DateTime    @default(now())

  @@map("chatrooms")
}
